        <main class="page-content">
            <div>
                <div class="form-group col-md-12">
                    <a class="back" href="/purchase">
                        <button style="margin-left: -30px;" class="btn btn-success">back</button></a>
                    <span class="title">Add Purchases</span>
                </div>
            </div>
            <div class="container d-flex p-2 justify-content-center">
                <a href="/productList"><button class="View">View Product List</button></a>
                <div class="row">

                    <div class="row1 ">
                        <form>
                            <div class="form-group row mt-2">
                                <label for="Date" class="col-sm-5 col-form-label formData">Date</label>
                                <div class="col-sm-7">
                                    <input type="date" class="form-control formData" id="Date" name="date">
                                </div>
                            </div>
                            <div class="form-group row mt-2">
                                <label for="inputPassword" class="col-sm-5 col-form-label formData">Select
                                    Product</label>
                                <div class="col-sm-7">
                                    <select class="form-select mt-2 form" aria-label="Default select example">
                                        <option selected>Select</option>
                                        <option value="1">Oil</option>
                                        <option value="2">Diesel</option>
                                        <option value="3">Petrol</option>
                                        <option value="3">Others</option>
                                    </select>
                                </div>
                                <div style="display: flex; margin-left: 82%;">


                                    <div>
                                        <button type="button" data-toggle="modal" data-target="#exampleModal"
                                            data-whatever="@mdo">Add</button>

                                        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog"
                                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">Add</h5>
                                                        <button type="button" class="close" data-dismiss="modal"
                                                            aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <form>
                                                            <div class="form-group">
                                                                <label for="recipient-name"
                                                                    class="col-form-label">ID:</label>
                                                                <input type="text" class="form-control"
                                                                    id="recipient-name">
                                                            </div>
                                                            <div class="form-group">
                                                                <label for="recipient-name"
                                                                    class="col-form-label">Product:</label>
                                                                <input type="text" class="form-control"
                                                                    id="recipient-name">
                                                            </div>
                                                            <div class="form-group mt-2">
                                                                <label class="Sales" for="recipient-name"
                                                                    for="">Type:</label>
                                                                <select class="form-control">
                                                                    <option value="1">Select</option>
                                                                    <option value="2">Liter</option>
                                                                    <option value="3">Quantity</option>

                                                                </select>
                                                            </div>

                                                        </form>
                                                    </div>
                                                    <div class="modal-footer">

                                                        <button type="button" class="btn btn-success">Add</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                    <div>
                                        <button type="button" data-toggle="modal" data-target="#exampleModal1"
                                            data-whatever="@mdo">Edit</button>

                                        <div class="modal fade" id="exampleModal1" tabindex="-1" role="dialog"
                                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">Edit</h5>
                                                        <button type="button" class="close" data-dismiss="modal"
                                                            aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <form>
                                                            <div class="form-group mt-2">
                                                                <label class="Sales" for="recipient-name"
                                                                    for="">Product:</label>
                                                                <select class="form-control">
                                                                    <option value="1">Select</option>
                                                                    <option value="2">Petrol</option>
                                                                    <option value="3">Diesel</option>
                                                                    <option value="3">Oil</option>
                                                                    <option value="3">Others</option>

                                                                </select>
                                                            </div>

                                                            <div class="form-group">
                                                                <label for="recipient-name"
                                                                    class="col-form-label">Edit:</label>
                                                                <input type="text" class="form-control"
                                                                    id="recipient-name">
                                                            </div>
                                                            <div class="form-group mt-2">
                                                                <label class="Sales" for="recipient-name"
                                                                    for="">Type:</label>
                                                                <select class="form-control">
                                                                    <option value="1">Select</option>
                                                                    <option value="2">Liter</option>
                                                                    <option value="3">Quantity</option>

                                                                </select>
                                                            </div>
                                                        </form>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-success">Edit</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label formData">Quantity</label>
                                <div class="col-sm-7">
                                    <input type="number" class="form-control formData">

                                </div>

                            </div>
                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label formData">Buy Price</label>
                                <div class="col-sm-7">
                                    <input type="number" class="form-control formData">
                                </div>

                            </div>
                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label formData">Total Price</label>
                                <div class="col-sm-7">
                                    <input type="number" class="form-control formData">
                                    <button class="btn btn-success btn-lg mt-3 ml-0 dropBut">Save</button>
                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="row mt-5">
                <table class="table">
                    <thead class="thead tabl">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Date</th>
                            <th scope="col">Product</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Buy Price</th>
                            <th scope="col">Total Price</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">1</th>
