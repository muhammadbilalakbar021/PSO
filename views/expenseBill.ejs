<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>PSO</title>
    <base href="/">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/x-icon" href="favicon.ico">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
    <!-- Google Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
    <link rel="stylesheet" href="CSS\salaries.css">
    <!-- Bootstrap core CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.16.0/css/mdb.min.css" rel="stylesheet">
    <!-- Bootstrap core CSS -->



</head>

<body>
    <div class="page-wrapper chiller-theme toggled">
        <nav id="sidebar" class="sidebar-wrapper">
            <div class="sidebar-content leftPane">
                <div id="toggle-sidebar">

                </div>
                <div class="sidebar-brand">
                    <a href="/home" class="txt">Empress Filling Station</a>
                </div>
                <div class="sidebar-header">
                    <div class="user-pic">
                        <img class="img-responsive img-rounded" src="../Assets/home1.png" alt="User picture">
                    </div>

                </div>

                <div class="sidebar-menu">
                    <ul>
                        <li class="sidebar-dropdown">
                            <a href="/purchase">
                                <span class="txt">Purchases</span>
                            </a>

                        </li>
                        <li class="sidebar-dropdown">
                            <a href="/dailySales">
                                <span class="txt">Daily Sales</span>
                            </a>

                        </li>
                        <li class="sidebar-dropdown">
                            <a href="/creditSales">
                                <span class="txt">Credit Sales</span>
                            </a>

                        </li>
                        <li class="sidebar-dropdown">
                            <a href="/expense">
                                <span class="txt">Expense</span>
                            </a>

                        </li>
                        <li class="sidebar-dropdown">
                            <a href="/profit">
                                <span class="txt">Profit</span>
                            </a>

                        </li>
                        <li class="sidebar-dropdown">
                            <a href="/prices">
                                <span class="txt">Prices</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

        </nav>

        <main class="page-content">
            <div>
                <div class="form-group col-md-12">
                    <a class="back" href="/expense"> <button style="margin-left: -30px;"
                            class="btn btn-success">back</button></a>
                    <span class="title">Bill</span>
                </div>
            </div>
            <div class="container d-flex p-2 justify-content-center">

                <div class="row">

                    <div class="row1 ">
                        <form action="/expenseBill" method="POST">
                            <div class="form-group row mt-2">
                                <label for="inputPassword" class="col-sm-5 col-form-label formData">Bill Name</label>
                                <div class="col-sm-7">
                                    <select class="form-select mt-2 form" aria-label="Default select example" id="billName" name="billName">
                                        <option selected>Bill name</option>
                                        <option value="1">Electricity</option>
                                        <option value="2">Gas</option>
                                        <option value="3">Water</option>
                                        <option value="3">Internet</option>
                                    </select>
                                </div>

                            </div>
                            <div class="form-group row">
                                <label for="inputPassword" class="col-sm-5 col-form-label formData">Month</label>
                                <div class="col-sm-7">
                                    <select class="form-select mt-2 form" aria-label="Default select example" id="month" name="month">
                                        <option selected>Choose Month</option>
                                        <option value="1">Jan</option>
                                        <option value="2">Feb</option>
                                        <option value="3">Mar</option>
                                        <option value="3">Apr</option>
                                        <option value="3">May</option>
                                        <option value="3">Jun</option>
                                        <option value="3">Jul</option>
                                        <option value="3">Aug</option>
                                        <option value="3">Sep</option>
                                        <option value="3">Oct</option>
                                        <option value="3">Nov</option>
                                        <option value="3">Dec</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label formData">Amount</label>
                                <div class="col-sm-7">
                                    <input type="number" class="form-control formData" id="amount" name="amount">
                                    <button class="btn btn-success btn-lg mt-3 ml-0 dropBut" type=submit>Save</button>
                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="row mt-5">
                <table class="table">
                    <thead class="thead tabl">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Bill name</th>
                            <th scope="col">Date</th>
                            <th scope="col">Month</th>
                            <th scope="col">Amount</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">1</th>
                            <td>Electricity</td>
                            <td>7/04/20</td>
                            <td>Apr</td>
                            <td>7000</td>
                            <td><i class="fas fa-trash-alt"></i></td>
                        </tr>
                        <tr>
                            <th scope="row">2</th>
                            <td>Water</td>
                            <td>12/06/20</td>
                            <td>Jun</td>
                            <td>1500</td>
                            <td><i class="fas fa-trash-alt"></i></td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </main>

        <!-- page-content" -->
    </div>
</body>
