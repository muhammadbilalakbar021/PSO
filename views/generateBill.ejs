        </nav>

        <main class="page-content">
            <div>
                <div class="form-group col-md-12">
                    <a class="back" href="/creditSales"> <button style="margin-left: -30px;"
                            class="btn btn-success">back</button></a>
                    <span class="title">Generate Bill</span>
                    <br><br>
                </div>
            </div>
            <div class="container d-flex p-2 justify-content-center">

                <div class="row1">


                    <form action="/generateBill" method="POST">
                        <div class="form-group row mt-2">
                            <label class="col-sm-5 col-form-label formData">From</label>
                            <div class="col-sm-7">
                                <input type="date" class="form-control formData" id="dateFrom" name="dateFrom">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-5 col-form-label formData">To</label>
                            <div class="col-sm-7">
                                <input type="date" class="form-control formData" id="dateTo" name="dateTo">
                            </div>

                        </div>
                        <div class="form-group row ">
                            <label class="col-sm-5 col-form-label formData" for="">Client ID</label>
                            <div class="col-sm-7 " style="display: flex; align-items: center;">
                                <input type="text" class="form-control" id="clientId" name="clientId">
                                <div>
                                    <button type="button" class="btn btn-success btn-md">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row ">
                            <label class="col-sm-5 col-form-label formData" for="">Client Name</label>
                            <div class="col-sm-7 " style="display: flex; align-items: center;">
                                <input type="text" class="form-control" id="clientName" name="clientName">
                                <div>
                                    <button type="button" class="btn btn-success btn-md">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-5 col-form-label formData">Pending</label>
                            <div class="col-sm-7">
                                <input type="text" class="form-control formData" id="pending" name="pending">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-5 col-form-label formData">Adjustment</label>
                            <div class="col-sm-7">
                                <input type="text" class="form-control formData" id="adjustment" name="adjustment">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-5 col-form-label formData">Discount</label>
                            <div class="col-sm-7">
                                <input type="number" class="form-control formData" id="discount" name="discount">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-5 col-form-label formData">Service Charges</label>
                            <div class="col-sm-7">
                                <input type="number" class="form-control formData" id="charges" name="charges">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-5 col-form-label formData">Total</label>
                            <div class="col-sm-7">
                                <input type="number" class="form-control formData" id="total" name="total">
                                <button class="btn btn-success btn-lg mt-3 ml-0 dropBut">Generate</button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>

            <div class="row mt-5">
                <table class="table">
                    <thead class="thead tabl">
                        <tr>
                            <th scope="col">From</th>
                            <th scope="col">To</th>
                            <th scope="col">Client ID</th>
                            <th scope="col">Client Name</th>
                            <th scope="col">Pending</th>
                            <th scope="col">Adjustment</th>
                            <th scope="col">Discount</th>
                            <th scope="col">Service Charges</th>
                            <th scope="col">Total</th>
                            <th scope="col"></th>

                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>7/04/20</td>
                            <td>7/05/20</td>
