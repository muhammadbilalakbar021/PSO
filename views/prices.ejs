<body>
    <div class="page-wrapper chiller-theme toggled">
        <nav id="sidebar" class="sidebar-wrapper">
            <div class="sidebar-content leftPane">
                <div id="toggle-sidebar">

                </div>
                <div class="sidebar-brand">
                    <a href="/home" class="txt">Empress Filling Station</a>
                </div>
                <div class="sidebar-header">
                    <div class="user-pic">
                        <img class="img-responsive img-rounded" src="../Assets/home1.png" alt="User picture">
                    </div>

                </div>

                <div class="sidebar-menu">
                    <ul>
                        <li class="sidebar-dropdown">
                            <a href="/purchase">
                                <span class="txt">Purchases</span>
                            </a>

                        </li>
                        <li class="sidebar-dropdown">
                            <a href="/dailySales">
                                <span class="txt">Daily Sales</span>
                            </a>

                        </li>
                        <li class="sidebar-dropdown">
                            <a href="/creditSales">
                                <span class="txt">Credit Sales</span>
                            </a>

                        </li>
                        <li class="sidebar-dropdown">
                            <a href="/expense">
                                <span class="txt">Expense</span>
                            </a>

                        </li>
                        <li class="sidebar-dropdown">
                            <a href="/profit">
                                <span class="txt">Profit</span>
                            </a>

                        </li>
                        <li class="sidebar-dropdown">
                            <a href="/prices">
                                <span class="txt">Prices</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

        </nav>

        <main class="page-content">
            <div>
                <div class="form-group col-md-12">
                    <a class="back" href="/home"> <button style="margin-left: -30px;"
                            class="btn btn-success">back</button></a>
                    <span class="title">Prices</span>
                    <br><br>
                </div>
            </div>
            <div class="container d-flex p-2 justify-content-center">

                <div class="row1">


                    <form action="/prices" method="POST">
                        <div class="form-group row mt-2">
                            <label for="Date" class="col-sm-5 col-form-label formData">Date</label>
                            <div class="col-sm-7">
                                <input type="date" class="form-control formData" id="date" name="date">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-5 col-form-label formData">Petrol</label>
                            <div class="col-sm-7">
                                <input type="text" class="form-control formData" id="petrol" name="petrol">
                            </div>

                        </div>
                        <div class="form-group row">
                            <label class="col-sm-5 col-form-label formData">Diesel</label>
                            <div class="col-sm-7">
                                <input type="text" class="form-control formData" id="diesel" name="diesel">
                            </div>

                        </div>
                        <div class="form-group row">
                            <label class="col-sm-5 col-form-label formData">Oil</label>
                            <div class="col-sm-7">
                                <input type="text" class="form-control formData" id="oil" name="oil">
                                <button class="btn btn-success btn-lg mt-3 ml-0 but" type=submit>Save</button>
                            </div>
                        </div>
                    </form>
                </div>
        </main>

        <!-- page-content" -->
    </div>
